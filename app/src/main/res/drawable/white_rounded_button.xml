<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_active="true">
        <shape>
            <solid
                android:color="@android:color/holo_blue_light" />
            <corners
                android:radius="10dp" />
        </shape>

    </item>
    <item>
        <shape>
            <solid
                android:color="@android:color/white" />
            <stroke
                android:color="@android:color/holo_blue_light"
                android:width="1dp"/>

            <corners
                android:radius="10dp" />
        </shape>

    </item>

</selector>