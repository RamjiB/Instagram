<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border_bottom">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/profile_image"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_pro_image"
            android:layout_centerVertical="true"
            app:civ_border_color="@android:color/black"
            app:civ_border_width="0.5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/relLayout1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/profile_image"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ramji.b"
                    android:id="@+id/username"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="this is a comment"
                    android:layout_toRightOf="@id/username"
                    android:id="@+id/comment"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5m"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/comment"
                    android:id="@+id/comment_time_posted"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 likes"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/comment_time_posted"
                    android:layout_below="@id/comment"
                    android:textStyle="bold"
                    android:id="@+id/comment_likes"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reply"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/comment"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/comment_likes"
                    android:id="@+id/comment_reply"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/comment_like"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_heart"/>

        </RelativeLayout>

    </RelativeLayout>
    


</RelativeLayout>